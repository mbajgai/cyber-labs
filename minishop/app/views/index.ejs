<!doctype html>
<html>
<head><title>MiniShop</title></head>
<body>
  <h1>MiniShop</h1>
  <% if (user) { %>
    <p>Welcome, <%= user.username %> | <a href="/logout">Logout</a></p>
  <% } else { %>
    <p><a href="/login">Login</a></p>
  <% } %>

  <h2>Products</h2>
  <ul>
    <% (products || []).forEach(function(p){ %>
      <li><a href="/product?id=<%= p.id %>"><%= p.name %></a> — £<%= p.price %></li>
    <% }) %>
  </ul>
</body>
</html>
